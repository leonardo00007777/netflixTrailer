<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="jmBeforeModifyProc">
<!--    '프로젝트: 자연이랑 모바일 웹-->
<!--    '프로그램: 회원정보 수정 이전 비밀번호확인-->

<!--    '20190307   hyeok   처음작성(member_before_modify_proc_m.asp 복사, URL정보 수정)-->
<!--    '20190916   sykim   비밀번호 SHA함수 변경(dbo.UBHASHFunc 대신 HASHBYTES('SHA2_256'.. 함수 사용).-->
    <select id="getMemberPassword">
        SELECT CASE WHEN mempw_hash = CONVERT(VARCHAR(1000),HASHBYTES('SHA2_256', #{strConfPass}),2)
                      THEN 'Y'
                    ELSE 'N'
               END passyn
        FROM mb_master
         WHERE memcd = #{strLoginMemCD}
    </select>
</mapper>