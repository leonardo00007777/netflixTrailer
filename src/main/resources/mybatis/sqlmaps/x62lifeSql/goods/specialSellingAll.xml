    <select id="specialSellingAllHeader">
        /*specialSellingAllHeader 기획전 모음 헤더*/
        SELECT *
        FROM specialsellingh
         WHERE 1 = 1
           AND shrtype NOT IN ('SP','BR')
          <![CDATA[
           AND shstartdt <= GETDATE()
           AND shenddt > GETDATE()
           AND ISNULL(shhideyn, 'N') <> 'Y'
          ]]>
        ORDER BY shidx DESC
    </select>
