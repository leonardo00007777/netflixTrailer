    <select id="todayDeliveryDefaultSetSingleProd">
       /* todayDeliveryDefaultSetSingleProd 기본세트상품 단품상품 표시*/
        SELECT cat1
             , catdesc
             , COUNT(g.gdcd) cnt
        FROM gd_master g
          LEFT JOIN exmenu c ON g.exdiv1 = c.cat1
        WHERE 1 = 1
          AND g.useyn = 'Y'
          AND g.divcd = '30'
          AND g.thedaysyn = 'Y'
        GROUP BY cdcode,cdname
        ORDER BY cdcode
            GROUP BY cat1, catdesc
        ORDER BY cat1
    </select>
