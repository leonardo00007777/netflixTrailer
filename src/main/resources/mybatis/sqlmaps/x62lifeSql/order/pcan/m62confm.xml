    <select id="getCurrentProdAdmin">
        SELECT gcm.memcd
             , m.MEMNAME,COUNT(1) EQUIPMENT
        FROM GCM_62LIFE gcm
          JOIN MB_MASTER m ON m.memcd=gcm.memcd
         WHERE gcm.groupx='SF'
        GROUP BY gcm.memcd,m.MEMNAME
        ORDER BY gcm.memcd
    </select>
